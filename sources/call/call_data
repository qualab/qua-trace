#pragma once

#include <qua/trace/call>
#include <string>
#include <deque>

namespace qua
{
    namespace trace
    {
        class call::data
        {
        public:
            data(const char* name, const char* file, long long line);

            const char* get_name() const;
            const char* get_file() const;
            long long get_line() const;

            static std::deque<call>& get_calls();

        private:
            std::string m_name;
            std::string m_file;
            long long m_line;
        };
    }
}
